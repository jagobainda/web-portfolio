---
interface Props {
    id?: string;
    icon: string;
    text?: string;
    variant?: 'main' | 'control';
    ariaLabel?: string;
    class?: string;
}

const { id, icon, text, variant = 'main', ariaLabel, class: className} = Astro.props;
const isMain = variant === 'main';
---

{isMain ? (
    <button
            id={id}
            aria-label={ariaLabel}
            class:list={[
                'btn-main group relative flex flex-col items-center justify-center gap-5 overflow-hidden',
                'w-1/5 h-75 min-w-62.5 min-h-20',
                'bg-(--bg-secondary) rounded-xl border-none cursor-pointer',
                'text-text-color transition-all duration-300 ease-in-out',
                'shadow-[4px_4px_8px_var(--shadow-light)]',
                'hover:shadow-[6px_6px_12px_var(--shadow-dark)] hover:-translate-y-1.25',
                'max-md:w-[45%] max-md:h-45 max-md:min-w-0',
                'max-sm:w-full max-sm:h-15 max-sm:flex-row max-sm:justify-start max-sm:pl-5 max-sm:gap-0',
                className
            ]}
    >
        <i class:list={[
            icon,
            'text-[3.5rem] z-1',
            'max-md:text-[2.5rem]',
            'max-sm:text-[1.8rem] max-sm:mr-4'
        ]}></i>
        {text && (
                <span class:list={[
                    'font-mono text-2xl font-bold z-1',
                    'max-md:text-xl',
                    'max-sm:text-lg'
                ]}>
            {text}
          </span>
        )}
    </button>
        ) : (
    <button
            id={id}
            aria-label={ariaLabel}
            class:list={[
                'btn-control flex items-center justify-center',
                'w-13.75 h-13.75 rounded-md border-none cursor-pointer',
                'bg-(--bg-secondary) text-text-color',
                'shadow-[4px_4px_6px_var(--shadow-light)]',
                'transition-all duration-300 ease-in-out',
                'hover:shadow-[6px_6px_8px_var(--shadow-dark)]',
                'max-md:w-11.25 max-md:h-11.25',
                className
            ]}
    >
        <i class={`${icon} text-xl`}></i>
    </button>
)}