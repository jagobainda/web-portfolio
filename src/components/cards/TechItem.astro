---
interface Props {
    icon: string;
    name: string;
}

const { icon, name } = Astro.props;
---

<div class:list={[
    'flex flex-col items-center p-4 rounded-lg',
    'bg-(--bg-secondary)',
    'shadow-[3px_3px_5px_var(--shadow-light)]',
    'transition-all duration-300',
    'hover:-translate-y-0.5 hover:shadow-[3px_3px_7px_var(--shadow-dark)]',
    'max-sm:p-2.5',
    'max-[360px]:flex-row max-[360px]:justify-between max-[360px]:text-left'
]}>
    <i class:list={[
        `${icon} colored`,
        'text-[2.5rem] mb-3',
        'max-md:text-[2rem]',
        'max-sm:text-[1.5rem] max-sm:mb-1.5',
        'max-[360px]:mb-0 max-[360px]:mr-2'
    ]}></i>
    <span class:list={[
        'font-mono font-bold text-center',
        'max-md:text-sm',
        'max-sm:text-xs',
        'max-[360px]:flex-1 max-[360px]:text-left max-[360px]:mb-0'
    ]}>
    {name}
  </span>
</div>